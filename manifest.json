{
    "manifest_version": 3,
    "name": "InboxWhisper",
    "version": "2.0",
    "description": "Voice-controlled Gmail assistant using Murph AI.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://api.murf.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "lib/sentiment.min.js",
                "summarize.js",
                "murphTTS.js",
                "voiceInput.js",
                "emotionDetect.js",
                "scamDetect.js",
                "regretResponder.js",
                "content.js"
            ]
        }
    ]
}